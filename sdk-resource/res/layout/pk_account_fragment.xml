        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/pk_coupon_icon"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/pk_account_arrows"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/account_item_pading"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="@dimen/account_item_pading"
                android:text="@string/pk_coupon"
                android:textColor="#565656"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_coupon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 å¼ "
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="60dp"
                android:textColor="#565656"
                android:textSize="16sp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_payRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/pk_pay_record_icon"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/pk_account_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/account_item_pading"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/account_item_pading"
            android:text="@string/pk_my_record"
            android:textColor="#565656"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b5b5b5" />

        <TextView
            android:id="@+id/tv_switchAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/pk_logout_icon"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/pk_account_arrows"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/account_item_pading"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="@dimen/account_item_pading"
