<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gift_title"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="礼包的Title"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_gift_identifies"
            android:layout_toRightOf="@+id/tv_gift_title"
            android:layout_alignBottom="@+id/tv_gift_title"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gift_desc"
            android:layout_below="@+id/tv_gift_title"
            android:textColor="#979797"
            android:textSize="10sp"
            android:text="礼包的Desc"
            android:singleLine="true"
            android:enabled="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领取"
        android:textColor="#eb4c3c"
        android:textSize="10sp"
        android:background="@drawable/pk_app_setting"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:id="@+id/tv_gift_state"/>

</LinearLayout>